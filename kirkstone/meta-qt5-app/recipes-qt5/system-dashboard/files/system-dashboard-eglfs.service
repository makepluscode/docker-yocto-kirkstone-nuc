[Unit]
Description=System Dashboard Application (EGLFS)
After=multi-user.target
Wants=multi-user.target

[Service]
Type=simple
User=root
Environment=QT_QPA_PLATFORM=eglfs
Environment=QT_QPA_EGLFS_INTEGRATION=eglfs_kms
Environment=QT_QPA_EGLFS_ALWAYS_SET_MODE=1
Environment=QT_QPA_EGLFS_KMS_CONFIG=/etc/qt5/eglfs_kms_config.json
Environment=QT_LOGGING_RULES=qt.qpa.eglfs.kms.debug=true
ExecStart=/usr/bin/system-dashboard
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target 